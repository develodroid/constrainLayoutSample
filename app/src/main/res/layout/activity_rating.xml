<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="288dp"
        app:srcCompat="@mipmap/list_header"
        android:id="@+id/imageView4"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="@string/bb_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        tools:text="@string/bb_desc"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="24dp"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintVertical_bias="0.19" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@mipmap/ic_share"
        android:id="@+id/floatingActionButton"
        app:backgroundTint="?android:attr/navigationBarColor"
        app:elevation="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_bias="1.0" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:id="@+id/ratingBar2"
        android:numStars="5"
        android:rating="4"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>